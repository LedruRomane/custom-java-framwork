<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="pu-catalogue">
    </persistence-unit>

    <persistence-unit name="pu-vol" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql:catalogue-db"/>
            <property name="jakarta.persistence.jdbc.user" value="catalogue"/>
            <property name="jakarta.persistence.jdbc.password" value="catalogue-mdp"/>
        </properties>
    </persistence-unit>
</persistence>